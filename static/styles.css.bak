/* 🌙 Dark Mode Styling */
body {
    font-family: Arial, sans-serif;
    text-align: center;
    margin: 20px;
    background-color: #1e1e1e; /* Dark background */
    color: #ffffff;
}

/* 🗨 Chat Container */
.chat-container {
    width: 400px;
    margin: auto;
    background: #252525; /* Darker chat background */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.1);
}

/* 🗨 Chat Box */
#chat-box {
    height: 300px;
    overflow-y: auto;
    border: 1px solid #444; /* Dark border */
    padding: 10px;
    background: #333; /* Even darker chat background */
    text-align: left;
    border-radius: 8px;
}

/* 🗨 Chat Bubbles */
.message {
    max-width: 80%;
    padding: 10px;
    margin: 10px 5px;
    border-radius: 12px;
    word-wrap: break-word;
    display: inline-block;
    clear: both;
}

/* 👤 User Message */
.user-message {
    background-color: #007bff; /* Blue */
    color: white;
    text-align: right;
    float: right;
}

/* 🤖 ChatGPT Message */
.bot-message {
    background-color: #444; /* Dark gray */
    color: white;
    text-align: left;
    float: left;
}

/* ⏳ Typing Indicator */
.typing-indicator {
    display: flex;
    align-items: center;
    margin: 10px;
}

.typing-indicator span {
    width: 8px;
    height: 8px;
    margin: 0 3px;
    background-color: white;
    border-radius: 50%;
    display: inline-block;
    animation: typing 1.5s infinite;
}

.typing-indicator span:nth-child(2) {
    animation-delay: 0.2s;
}

.typing-indicator span:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes typing {
    0% { opacity: 0.2; }
    50% { opacity: 1; }
    100% { opacity: 0.2; }
}

/* 💬 Input & Buttons */
input {
    width: 70%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #666; /* Dark border */
    background: #222;
    color: white;
    border-radius: 5px;
}

button {
    padding: 10px;
    border: none;
    background: #007bff;
    color: white;
    border-radius: 5px;
    cursor: pointer;
}

button:hover {
    background: #0056b3;
}

